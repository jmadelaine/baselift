{
  "name": "baselift",
  "version": "0.6.0",
  "description": "React base components that implement Emotion",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.tsx\"",
    "prepare": "yarn build",
    "prepublishOnly": "yarn format && yarn test",
    "test": "jest --config jestconfig.json"
  },
  "keywords": [
    "base",
    "components",
    "functional",
    "presentational",
    "react",
    "stateless",
    "ui"
  ],
  "author": "Jonathan Madelaine",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@emotion/core": "^10.0.35",
    "@testing-library/react": "^11.0.4",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.52",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^16.9.3",
    "codecov": "^3.8.0",
    "jest": "^26.5.3",
    "jest-emotion": "^10.0.32",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "@emotion/core": "^10.0.35"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jmadelaine/baselift.git"
  },
  "bit": {
    "env": {
      "compiler": "bit.envs/compilers/react-typescript@3.1.57"
    },
    "componentsDefaultDirectory": "src/{name}",
    "packageManager": "yarn",
    "dist": {
      "target": "bit-dist"
    }
  }
}
