{
  "name": "baselift",
  "version": "0.5.1",
  "description": "React base components that implement Emotion",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.tsx\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "yarn build",
    "prepublishOnly": "yarn format && yarn lint && yarn test",
    "test": "jest --config jestconfig.json"
  },
  "keywords": [
    "base",
    "components",
    "functional",
    "presentational",
    "react",
    "stateless",
    "ui"
  ],
  "author": "Jonathan Madelaine",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@emotion/core": "^10.0.28",
    "@testing-library/react": "^10.4.7",
    "@types/jest": "^26.0.5",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^16.9.2",
    "codecov": "^3.7.1",
    "jest": "^26.1.0",
    "jest-emotion": "^10.0.32",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^26.1.3",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "@emotion/core": "^10.0.28"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jmadelaine/baselift.git"
  },
  "bit": {
    "env": {
      "compiler": "bit.envs/compilers/react-typescript@3.1.57"
    },
    "componentsDefaultDirectory": "src/components/{name}",
    "packageManager": "yarn",
    "dist": {
      "target": "bit-dist"
    }
  }
}
